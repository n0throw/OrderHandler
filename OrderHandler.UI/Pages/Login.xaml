<Page x:Class="OrderHandler.UI.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderHandler.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="White">
        <ComboBox Margin="0,198,0,230" HorizontalAlignment="Center" Width="120"/>
        <PasswordBox HorizontalAlignment="Center" Margin="0,230,0,0" Password="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,177,0,0" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Top"/>
        <CheckBox HorizontalAlignment="Left" Margin="465,231,0,0" VerticalAlignment="Top" IsChecked="False" IsEnabled="False" ToolTip="CapsLock"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding ClosePageCommand}"/>
    </Grid>
</Page>
