<Page x:Class="OrderHandler.UI.Pages.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderHandler.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DefaultPage" Background="White">
    <Grid>
        <TextBlock Margin="10,100,10,0" TextWrapping="Wrap" Text="Oh, something went wrong" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock Margin="10,132,10,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top" Height="308" TextAlignment="Center"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding ClosePageCommand}"/>
    </Grid>
</Page>
