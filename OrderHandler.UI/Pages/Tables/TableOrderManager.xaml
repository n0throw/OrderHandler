                    <Border Style="{StaticResource HeaderBorder}" Width="{Binding Width, ElementName=MillingDG, Mode=OneWay}">
                        <TextBlock Text="Фрезеровка" TextAlignment="Center" Background="#C6E0B4"/>
                    </Border>
                    <DataGrid x:Name="MillingDG"
                          ItemsSource="{Binding Milling}"
                          SelectedItem="{Binding SelectedMilling}"
                          Style="{StaticResource BaseDataGrid}"
                          CellStyle="{StaticResource BaseDataGridCell}">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Изменить" Command="{Binding ChangeRowMilling}" CommandParameter="{Binding SelectedMilling}" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn HeaderStyle="{StaticResource SecondDataGridColumnHeader}" Header="Плановая дата"    Binding="{Binding Path=PlannedDate}"                                    MinWidth="95" />
                            <DataGridTextColumn HeaderStyle="{StaticResource SecondDataGridColumnHeader}" Header="ФИО"              Binding="{Binding Path=UserName}"                                       MinWidth="190" />
                            <DataGridTextColumn HeaderStyle="{StaticResource SecondDataGridColumnHeader}" Header="Дата"             Binding="{Binding Path=Date, Converter={StaticResource DateConverter}}" MinWidth="70" />
                            <DataGridTextColumn HeaderStyle="{StaticResource SecondDataGridColumnHeader}" Header="МДФ м&#x00B2;"    Binding="{Binding Path=MDF}"                                            MinWidth="70" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                        CanHorizontallyScroll="False"
                        CanVerticallyScroll="False">
                    <Border Style="{StaticResource HeaderBorder}" Width="{Binding Width, ElementName=GrindingDG, Mode=OneWay}">
                        <TextBlock Text="Шлифовка" TextAlignment="Center" Background="#C6E0B4"/>
