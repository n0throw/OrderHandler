                    <Border Style="{StaticResource HeaderBorder}" Width="{Binding Width, ElementName=PressDG, Mode=OneWay}">
                        <TextBlock Text="Пресс" TextAlignment="Center" Background="#C6E0B4"/>
                    </Border>
                    <DataGrid x:Name="PressDG"
                          ItemsSource="{Binding Press}"
                          SelectedItem="{Binding SelectedPress}"
