                            <DataGridTextColumn HeaderStyle="{StaticResource SecondDataGridColumnHeader}" Header="Дата"                 Binding="{Binding Path=Date, Converter={StaticResource DateConverter}}" MinWidth="70" />
                            <DataGridTextColumn HeaderStyle="{StaticResource SecondDataGridColumnHeader}" Header="Необходимая сумма"    Binding="{Binding Path=Cost}"                                           MinWidth="130" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                        CanHorizontallyScroll="False"
                        CanVerticallyScroll="False">
                    <Border Style="{StaticResource HeaderBorder}" Width="{Binding Width, ElementName=SawCenterDG, Mode=OneWay}">
                        <TextBlock Text="Пильный центр" TextAlignment="Center" Background="#C6E0B4"/>
